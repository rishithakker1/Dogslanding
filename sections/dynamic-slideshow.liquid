        },
        {
          "type": "text",
          "id": "button",
          "label": "Button text",
          "default": "Your call to action button"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Slide link URL"
        },
        {
          "type": "select",
          "id": "alignment",
          "label": "Text position",
          "options": [
            {
              "value": "center-center",
              "label": "Center"
            },
            {
              "value": "center bottom",
              "label": "Center bottom"
            },
            {
              "value": "center top",
              "label": "Center top"
            },
            {
              "value": "left middle",
              "label": "Left center"
            },
            {
              "value": "left bottom",
              "label": "Left bottom"
            },
            {
              "value": "left top",
              "label": "Left top"
            },
            {
              "value": "right middle",
              "label": "Right center"
            },
            {
              "value": "right bottom",
              "label": "Right bottom"
            },
            {
              "value": "right top",
              "label": "Right top"
            }
          ],
          "default": "center-center"
        },
        {
          "type": "header",
          "content": "Overlay"
        },
        {
          "id": "show_overlay",
          "type": "checkbox",
          "label": "Show overlay"
        },
        {
          "id": "background",
          "type": "color",
          "label": "Color",
          "default": "#000"
        },
        {
          "id": "opacity",
          "type": "range",
          "label": "Opacity",
          "min": 1,
          "max": 100,
          "step": 1,
          "unit": "%",
          "default": 20
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Image",
      "name": "Slideshow",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "feature"
        }
      ]
    }
  ]
}

{% endschema %}