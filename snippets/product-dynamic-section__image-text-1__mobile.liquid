{% comment %}
SECTION METAFIELDS
{% endcomment %}

{% assign s1__background_image_mobile = product.metafields.section_1.background_image_mobile %}
{% assign s1__content_image = product.metafields.section_1.content_image %}
{% assign s1__content_heading = product.metafields.section_1.content_heading %}
{% assign s1__content_subheading = product.metafields.section_1.content_subheading %}

<section class="product__dynamic-section image-text__section mobile hidden_desktop iwt__1">
  <div class="section__background">
    <div class="content-area">

      <div class="content__wrap text__center">
        <div class="dynamic_content__image">
          {% if s1__content_image != blank %}
          <img src="{{ s1__content_image }}">
          {% else %}
          <img src="https://cdn.shopify.com/s/files/1/0068/7420/2167/files/dog_bed.png?v=1615748410">
          {% endif %}
        </div>

        <div class="dynamic_content__text">
          {% if s1__content_subheading != blank and s1__content_heading != blank %}
          <h4 class="subheading">{{ s1__content_subheading }}</h4>
          <h2 class="heading">{{ s1__content_heading }}</h2>
          {% else %}
          <h4 class="subheading">New Launch Special Offer!</h4>
          <h2 class="heading">Order today while stock lasts</h2>
          {% endif %}
          <a href=".product-area" class="action-button wider__button scroll">Order Now</a>
        </div>
      </div>

    </div>
  </div>
</section>

<style>
  .iwt__1.mobile .section__background:before {
  	content: "";
    {% if s1__background_image_mobile != blank %}
    background: url({{ s1__background_image_mobile }});
    {% else %}
    background: url("https://cdn.shopify.com/s/files/1/0068/7420/2167/files/iwt_1_mobile.png?v=1616424158");
    {% endif %}
    background-size: cover;
    background-repeat: no-repeat;
    position: absolute;
    z-index: -1;
    width: 100%;
    min-height: 475px;
  }
</style>