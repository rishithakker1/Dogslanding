            <div class="logo-list-item-wrap">
              <img src="https://cdn.shopify.com/s/files/1/0068/7420/2167/files/feather.png?v=1615998221">
              <h3 class="accent__blue">Super Soft Safe Material</h3>
              <p>Snuggly sleep surface for Superior Comfort</p>
            </div>
          </div>
          <div class="logo-list-item">
            <div class="logo-list-item-wrap">
              <img src="https://cdn.shopify.com/s/files/1/0068/7420/2167/files/feather.png?v=1615998221">
              <h3 class="accent__blue">Super Soft Safe Material</h3>
              <p>Snuggly sleep surface for Superior Comfort</p>
            </div>
          </div>
          <div class="logo-list-item">
            <div class="logo-list-item-wrap">
              <img src="https://cdn.shopify.com/s/files/1/0068/7420/2167/files/feather.png?v=1615998221">
              <h3 class="accent__blue">Super Soft Safe Material</h3>
              <p>Snuggly sleep surface for Superior Comfort</p>
            </div>
          </div>

        {% endif %}
        
      </div>
    </div>

  </div>

</section>

<style>
  @media (min-width: 720px) {
    .logo__section .section__background:before {
      content: "";
      {% if s3__background_image != blank %}
      background: url({{ s3__background_image }});
      {% else %}
      background: url("https://cdn.shopify.com/s/files/1/0068/7420/2167/files/bg_values.png?v=1615999191");
      {% endif %}
      background-size: cover;
      background-repeat: no-repeat;
      position: absolute;
      z-index: -1;
      width: 100%;
      min-height: 350px;
      bottom: 0;
      left: 0;
    }
  }
</style>